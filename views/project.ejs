<script>
    // Navbar scroll effect
    window.addEventListener('scroll', () => {
        document.querySelector('nav').classList.toggle('scrolled', window.scrollY > 50);
    });

    // Smooth scrolling
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });

    // Mobile menu toggle
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');
    hamburger.addEventListener('click', () => {
        navLinks.classList.toggle('active');
    });

    // Placeholder form submission
    document.querySelector('.contact-form').addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Message sent! (This is a demo)');
    });

    // Game loader
    const iframe = document.getElementById("game-frame");
    function loadGame(url) {
        iframe.src = ""; 
        iframe.src = url;
        iframe.style.display = "block";
        iframe.scrollIntoView({ behavior: "smooth", block: "center" });
    }

    // AI Safety Analyzer Logic
    document.addEventListener('DOMContentLoaded', () => {
        if (!document.getElementById('aiSafetyAnalyzer')) return;
        const uploadArea = document.getElementById('uploadArea');
        const imageInput = document.getElementById('imageInput');
        const imagePreview = document.getElementById('imagePreview');
        const analyzeBtn = document.getElementById('analyzeBtn');
        const loading = document.getElementById('loading');
        const resultsContainer = document.getElementById('resultsContainer');
        const detectionResults = document.getElementById('detectionResults');
        const safetyInstructions = document.getElementById('safetyInstructions');
        const errorMessage = document.getElementById('errorMessage');
        const apiStatus = document.getElementById('apiStatus');
        const API_KEY = 'acc_23dfbef227d7a47';
        const API_SECRET = '8323a84cdac7daf41ac4631a4c0b5d16';

        if (API_KEY !== 'YOUR_API_KEY' && API_SECRET !== 'YOUR_API_SECRET') {
            apiStatus.textContent = '‚úÖ Imagga API Ready';
        } else {
            apiStatus.textContent = '‚ö†Ô∏è API Credentials Missing';
        }

        uploadArea.addEventListener('click', () => imageInput.click());
        imageInput.addEventListener('change', (e) => handleFile(e.target.files[0]));
        ['dragover', 'dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, (e) => {
                e.preventDefault();
                e.stopPropagation();
            }, false);
        });
        uploadArea.addEventListener('dragover', () => uploadArea.classList.add('dragover'));
        uploadArea.addEventListener('dragleave', () => uploadArea.classList.remove('dragover'));
        uploadArea.addEventListener('drop', (e) => {
            uploadArea.classList.remove('dragover');
            handleFile(e.dataTransfer.files[0]);
        });
        analyzeBtn.addEventListener('click', analyzeImageWithImaggaAPI);

        function handleFile(file) {
            if (!file) return;
            hideError();
            resultsContainer.style.display = 'none';
            if (!file.type.startsWith('image/')) {
                showError('Please upload an image file (JPEG, PNG, etc.).');
                return;
            }
            if (file.size > 5 * 1024 * 1024) { // 5MB limit
                showError('Image size must be less than 5MB.');
                return;
            }
            const reader = new FileReader();
            reader.onload = (e) => {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
                analyzeBtn.disabled = false;
            };
            reader.readAsDataURL(file);
        }

        async function analyzeImageWithImaggaAPI() {
            if (!imagePreview.src.startsWith('data:image')) {
                showError('No image selected for analysis.');
                return;
            }
            loading.style.display = 'block';
            analyzeBtn.disabled = true;
            resultsContainer.style.display = 'none';
            hideError();
            const basicAuth = btoa(`${API_KEY}:${API_SECRET}`);
            const base64ImageData = imagePreview.src.split(',')[1];
            const formData = new FormData();
            formData.append('image_base64', base64ImageData);
            try {
                const response = await fetch('https://api.imagga.com/v2/tags', {
                    method: 'POST',
                    headers: { 'Authorization': `Basic ${basicAuth}` },
                    body: formData
                });
                const data = await response.json();
                if (data.result && data.result.tags) {
                    const detectedLabels = data.result.tags.map(tag => tag.tag.en);
                    displayApiResults(detectedLabels);
                } else {
                    showError(data.status ? data.status.text : 'An unknown Imagga API error occurred.');
                }
            } catch (error) {
                showError('Network error. Could not reach the Imagga API.');
            } finally {
                loading.style.display = 'none';
                analyzeBtn.disabled = false;
            }
        }

        function displayApiResults(detectedLabels) {
            const safetyKeywordMap = {
                'flood': '<li><strong>Flood Detected:</strong> Evacuate to higher ground immediately. Avoid walking or driving through floodwaters.</li>',
                'water': '<li><strong>Water Hazard:</strong> Be cautious of deep or fast-moving water. Do not touch electrical equipment if you are wet or standing in water.</li>',
                'fire': '<li><strong>Fire/Smoke Detected:</strong> Evacuate immediately. Stay low to the ground to avoid smoke inhalation. Call emergency services.</li>',
                'smoke': '<li><strong>Fire/Smoke Detected:</strong> Evacuate immediately. Stay low to the ground to avoid smoke inhalation. Call emergency services.</li>',
                'earthquake': '<li><strong>Earthquake Damage Possible:</strong> Drop, Cover, and Hold On. Be cautious of aftershocks and unstable structures.</li>',
                'car accident': '<li><strong>Traffic Incident:</strong> Keep a safe distance. Report the incident to authorities and watch for emergency vehicles.</li>'
            };
            detectionResults.innerHTML = `<h3>üîç AI Detection Summary</h3><p><strong>Detected Scene Labels:</strong> ${detectedLabels.join(', ')}</p>`;
            const safetyTips = new Set();
            for (const label of detectedLabels) {
                for (const keyword in safetyKeywordMap) {
                    if (label.includes(keyword)) {
                        safetyTips.add(safetyKeywordMap[keyword]);
                    }
                }
            }
            let safetyMsg = '';
            const hazardDetected = safetyTips.size > 0;
            if (hazardDetected) {
                safetyMsg = `<ol>${[...safetyTips].join('')}</ol>`;
            } else {
                safetyMsg = `<ol><li>No specific hazards detected.</li><li>Always remain vigilant and follow general safety protocols.</li></ol>`;
            }
            safetyInstructions.innerHTML = `<div class="safety-instructions"><div class="instruction-header${hazardDetected ? '' : ' low'}"><span class="instruction-icon">${hazardDetected ? '‚ö†Ô∏è' : '‚úÖ'}</span><h3>${hazardDetected ? 'Contextual Safety Analysis' : 'General Safety Tips'}</h3></div><div class="instruction-content">${safetyMsg}</div></div>`;
            resultsContainer.style.display = 'block';
        }
        function showError(message) { errorMessage.textContent = message; errorMessage.style.display = 'block'; }
        function hideError() { errorMessage.style.display = 'none'; }
    });

    // Building Safety Check Logic
    document.addEventListener('DOMContentLoaded', () => {
        if (!document.getElementById('safetyCheckSection')) return;
        const buildingDatabase = [
            { name: 'Jaipur Engineering Collage and Research Centre', status: 'Approved' },
            { name: 'Malaviya National Institute of Technology', status: 'Approved' },
            { name: 'Jaipur National University', status: 'Approved' },
            { name: 'St. Xavier\'s School', status: 'Not Approved' },
            { name: 'Sawai Man Singh Medical College', status: 'Approved' },
            { name: 'India International School', status: 'Not Approved' },
            { name: 'Poornima University', status: 'Approved' },
            { name: 'Maharani\'s College', status: 'Not Approved' }
        ];
        const verifyBtn = document.getElementById('verifyBtn');
        const buildingInput = document.getElementById('buildingNameInput');
        const resultCard = document.getElementById('resultCard');
        const loader = document.getElementById('loader');
        const resultIcon = document.getElementById('resultIcon');
        const resultBuildingName = document.getElementById('resultBuildingName');
        const resultStatusText = document.getElementById('resultStatusText');
        verifyBtn.addEventListener('click', checkSafetyStatus);
        function checkSafetyStatus() {
            const query = buildingInput.value.trim();
            if (!query) { alert("Please enter a building name."); return; }
            resultCard.style.display = 'none';
            loader.style.display = 'block';
            verifyBtn.disabled = true;
            setTimeout(() => {
                const result = buildingDatabase.find(b => b.name.toLowerCase() === query.toLowerCase());
                loader.style.display = 'none';
                verifyBtn.disabled = false;
                displayResult(result, query);
            }, 1500);
        }
        function displayResult(result, query) {
            resultCard.className = 'sc-result-card';
            if (result) {
                if (result.status === 'Approved') {
                    resultCard.classList.add('approved');
                    resultIcon.textContent = '‚úÖ';
                    resultBuildingName.textContent = result.name;
                    resultStatusText.textContent = 'This building is an APPROVED disaster-ready location.';
                } else {
                    resultCard.classList.add('not-approved');
                    resultIcon.textContent = '‚ö†Ô∏è';
                    resultBuildingName.textContent = result.name;
                    resultStatusText.textContent = 'This building is NOT listed as an approved disaster-ready location.';
                }
            } else {
                resultCard.classList.add('not-found');
                resultIcon.textContent = '‚ùå';
                resultBuildingName.textContent = `"${query}" Not Found`;
                resultStatusText.textContent = 'This building is not in our verification database. Please check the name and try again.';
            }
            resultCard.style.display = 'flex';
